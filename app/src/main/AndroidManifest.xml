<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orangenote.orangenote" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MemoView"
            android:label="@string/title_activity_memo_view"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".MemoWrite"
            android:label="@string/title_activity_memo_write"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".MemoDraw"
            android:label="@string/title_activity_memo_draw"
            android:launchMode="singleInstance">
        </activity>
        <activity android:name=".notification"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".password"
            android:label="@string/title_activity_password"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".password_check"
            android:label="@string/title_activity_password_check"
            android:launchMode="singleInstance">
        </activity>
    </application>

</manifest>
